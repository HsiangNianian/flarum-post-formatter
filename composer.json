{
    "name": "cosname/flarum-post-formatter",
    "description": "Allow posts to be formatted and rendered with a subset of BBCode and HTML.",
    "type": "flarum-extension",
    "keywords": [
        "formatting",
        "bbcode",
        "html"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yixuan Qiu",
            "email": "yixuan.qiu@cos.name"
        }
    ],
    "require": {
        "flarum/core": "^1.0"
    },
    "extra": {
        "flarum-extension": {
            "title": "Post Formatter",
            "icon": {
                "name": "fas fa-comment-dots",
                "backgroundColor": "#3ca156",
                "color": "#eee"
            }
        }
    }
}
